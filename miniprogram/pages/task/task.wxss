.body{
  display: flex;
  flex-direction: column;
  align-items:center; 
}
.bgimg{
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;

}
.rule{
  margin-top: 20rpx;
  width:250rpx;
  text-align: right;
}
.run{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 80%  ;
  height: 150rpx;
  background-color: ghostwhite;
  margin:40rpx 0;
  border-radius: 10%;
  box-shadow: 0px 4px 4px #c2b9b9 ;
}
.text{
  width:65%;
  text-align: center; 
}
.run-b image{
  width: 50%;
  height: 60%;
}
.run-b{
    height:150rpx;
    display: flex;
    flex-direction: column;
